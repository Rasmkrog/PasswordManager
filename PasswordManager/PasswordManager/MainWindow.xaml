<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Height="600" 
        Width="920">
        
    <Border Background="#272537"
            BorderThickness="0,0,0,0"
            CornerRadius="20">
        <Grid ShowGridLines="True">
            <Grid.Resources>
                <Style x:Key="StackPanelStyle" TargetType="StackPanel">
                    <Setter Property="Orientation" Value="Vertical" />
                    <Setter Property="Margin" Value=" 0, 20 ,0,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBlock
                Text="PW Manager"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20,0,0,0"
                Foreground="White"
                FontSize="20"/>
            
            <Grid ShowGridLines="True" Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Grid.Column="0" Style="{StaticResource StackPanelStyle}">
                    <RadioButton Content="Home"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14" 
                                 Style="{StaticResource NavbarButtonTheme}"/>
                    <RadioButton Content="Password Generator"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14" 
                                 Style="{StaticResource NavbarButtonTheme}"/>
                    <RadioButton Content="Add Password"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource NavbarButtonTheme}"/>
                        
                    <RadioButton Content="Security check"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14"
                                 Style="{StaticResource NavbarButtonTheme}"/>
                    
                </StackPanel>
                
                <StackPanel Grid.Row="1" Style="{StaticResource StackPanelStyle}" 
                            VerticalAlignment="Bottom" 
                            Margin="0, 0, 0, 10">
                    <RadioButton Content="Settings"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14" 
                                 Style="{StaticResource NavbarButtonTheme}"/>
                    <RadioButton Content="Language"
                                 Height="50"
                                 Foreground="White"
                                 FontSize="14" 
                                 Style="{StaticResource NavbarButtonTheme}"/>
                    <RadioButton Content="User"
                                 Height="50"
                                 Foreground="    White"
                                 FontSize="14"
                                 Style="{StaticResource NavbarButtonTheme}"/>
                </StackPanel>
            </Grid>
            
            
            <TextBlock Grid.Row="0" 
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="5,5,20,5"
                       Width="250"
                       Height="50"
                       TextAlignment="Right"
                       
            >
                
            </TextBlock>
            
            
        </Grid>
        
    </Border>
    
</Window>
