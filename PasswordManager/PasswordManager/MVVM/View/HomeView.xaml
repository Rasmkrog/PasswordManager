<UserControl x:Class="PasswordManager.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PasswordManager.MVVM.View"
             xmlns:Model="clr-namespace:PasswordManager.MVVM.Model"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        
        <Grid Grid.Column="0" Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="Logins"
                       Foreground="White"
                       FontSize="28"
                       HorizontalAlignment="Left"
                       FontFamily="Segoe UI"
                       Margin="40, 0 ,0 ,10 ">
            </TextBlock>
            
            <!-- Grid for number of logins-->
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock Grid.Column="0"
                           Text="x"
                           FontSize="16"
                           Foreground="Beige"
                           HorizontalAlignment="Left"
                           FontFamily="Segoe UI"
                           FontStyle="Italic"
                           Margin="40, 0 ,0 ,20 " />

                <TextBlock Grid.Column="1"
                           Text="number of logins"
                           Foreground="Beige"
                           FontSize="16"
                           HorizontalAlignment="Left"
                           FontFamily="Segoe UI"
                           FontStyle="Italic"
                           Margin="10,0 ,0 ,20 " /> 
            </StackPanel>
        </Grid>
        
        <!-- Right side grid for searchbox for logins-->
        <!-- TODO: Add searchbox in grid row 0, colum 1-->
        <Grid Grid.Row="1" Name="LoginGrid">
            <GridViewColumnHeader Content="Title"/>
            <GridViewColumnHeader Grid.Column="0" Content="Username"/>
            <GridViewColumnHeader Grid.Column="0" Content="Password"/>
            <GridViewColumnHeader Grid.Column="0" Content="Last Modified"/>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        
        
        <Button Grid.Row="2" Grid.Column="0" Content="Test Connection" Click="TestConnection_Click" />
    </Grid>
</UserControl>
