<UserControl x:Class="PasswordManager.MVVM.View.AddPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PasswordManager.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid ShowGridLines="True" Background="#272537">
        <!--create form for adding passwords-->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Add Password" VerticalAlignment="Center" Margin="10,20,10,20" TextAlignment="Left"
                       Foreground="White" >
            </TextBlock>
        
            <!--<TextBlock Grid.Column="1" Grid.Row="1" Height="20" HorizontalAlignment="Left" x:Name ="errormessage" VerticalAlignment="Top" OpacityMask="Crimson" Foreground="#FFE5572C" />-->  
            <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Name="textBlockFirstname" Text="Name:"
                       VerticalAlignment="Center" Foreground="White" 
                       Margin="10,10,0,10"/>  
            <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Name="textBlockLastName"
                       Text="Username:" VerticalAlignment="Center"  Foreground="White" Margin="10,10,0,10"/>  
            <TextBlock Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Name="textBlockPassword"
                       Text="Password:" VerticalAlignment="Center"  Foreground="White" Margin="10,10,0,10" />  
            <TextBlock Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Name="textBlockConfirmPwd"
                       Text="Website URL:" VerticalAlignment="Center"  Foreground="White" Margin="10,10,0,10"/>  
            <TextBlock Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Name="textBlockAddress" Text="Notes:"
                       VerticalAlignment="Center" Foreground="White" Margin="10,10,0,10" />  
            
            <TextBox Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" Height="25" Name="textboxName" VerticalAlignment="Center" />  
            <TextBox Grid.Row="3" Grid.Column="2"  HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" Height="25"  Name="texboxUsername" VerticalAlignment="Top"  />  
            <PasswordBox Grid.Row="4" Grid.Column="2"  HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" Height="25" Name="textboxPassword" VerticalAlignment="Top"  />  
            <!--For password-->  
            <TextBox Grid.Row="5" Grid.Column="2"  HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" Height="25" Name="WebsiteURL" VerticalAlignment="Bottom"  />  
            <TextBox Grid.Row="6" Grid.Column="2"  HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" Height="25" Name="Notes" VerticalAlignment="Bottom"  />  

            <Button Grid.Row="0" Grid.Column="0" Content="Submit" HorizontalAlignment="Left" Name="Submit" VerticalAlignment="Top"   />  
            <Button Grid.Row="0" Grid.Column="0" Content="Reset" HorizontalAlignment="Left" Name="button2" VerticalAlignment="Top"   />  
            <Button Grid.Row="0" Grid.Column="0" Content="Cancel"  HorizontalAlignment="Right" Name="button3" VerticalAlignment="Top"  /> 
        
    </Grid>
</UserControl>
